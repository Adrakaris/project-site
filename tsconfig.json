{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "allowJs": true,

        "rootDir": "ts",
        "outDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "skipLibCheck": true
    },

    "include": [
        "ts/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}